#!/bin/sh -eu

PROG="${0##*/}"
cd "${RPM_BUILD_ROOT:?}"

set -- ./usr/*/perl5/
[ -d "$1" ] || exit 0

find "$@" -type f -name .packlist -print0 |
	xargs -r0 rm -vf --

find "$@" -type f -name \*.bs -size 0 -print0 |
	xargs -r0 rm -vf --

once=
find "$@" -type f -name \*.bs |
while read -r f; do
	[ -n "$once" ] ||
	echo "WARNING: $PROG: non empty *.bs file(s) found:"
	echo "    $f"
	once=1
done >&2
